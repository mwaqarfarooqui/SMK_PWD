                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_h1101"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_h1101"
                            android:text="@string/h1101" />

                        <TextView
                            android:id="@+id/q_h1101"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_h1101"
                            android:layout_alignBottom="@id/qtxt_h1101"
                            android:text="@string/Q_h1101" />

                    </RelativeLayout>

                    <RadioGroup
