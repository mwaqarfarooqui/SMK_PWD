<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_hfa_2020.ui.sections.SectionD3Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">

            <!-- d03  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd03"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/d03" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- d0301  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0301"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_d0301"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_d0301"
                            android:text="@string/d0301" />

                        <TextView
                            android:id="@+id/q_d0301"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_d0301"
                            android:layout_alignBottom="@id/qtxt_d0301"
                            android:text="@string/Q_d0301" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/d0301"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0301a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301a" />

                        <RadioButton
                            android:id="@+id/d0301b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301b" />

                        <RadioButton
                            android:id="@+id/d0301c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301c" />

                        <RadioButton
                            android:id="@+id/d0301d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301d" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


