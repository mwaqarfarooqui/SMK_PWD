<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_hfa_2020.ui.sections.SectionAActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">


            <!-- a03  Date-Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVa03"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_a03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_a03"
                            android:text="@string/a03" />

                        <TextView
                            android:id="@+id/q_a03"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_a03"
                            android:layout_alignBottom="@id/qtxt_a03"
                            android:text="@string/Q_a03" />

                    </RelativeLayout>

                    <LinearLayout style="@style/hlinearlayout">

                        <LinearLayout
                            style="@style/vlinearlayout"
                            android:layout_width="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/textviewh"
                                android:text="@string/date" />

                            <!--<com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/a03d"
                                style="@style/EditTextNum"
                                android:hint="##"
                                android:maxLength="2"
                                android:textAlignment="center"
                                app:maxValue="31"
                                app:minValue="1"
                                app:type="range" />-->

                            <io.blackbox_vision.datetimepickeredittext.view.DatePickerEditText
                                android:id="@+id/a03d"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:gravity="center"
                                android:hint="@string/date"
                                app:dateFormat="dd-MM-yy"
                                app:maxDate="CR_DATE" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/vlinearlayout"
                            android:layout_width="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/textviewh"
                                android:text="@string/time" />

                            <!--<com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/a03m"
                                style="@style/EditTextNum"
                                android:hint="##"
                                android:maxLength="2"
                                android:textAlignment="center"
                                app:maxValue="12"
                                app:minValue="1"
                                app:type="range" />-->

                            <io.blackbox_vision.datetimepickeredittext.view.TimePickerInputEditText
                                android:id="@+id/a03m"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:gravity="center"
                                android:hint="HH:mm"
                                app:is24HourView="true"
                                app:timeFormat="HH:mm" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


